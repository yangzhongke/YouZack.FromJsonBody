<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
    <title>YouZack.FromJsonBody Demos</title>
</head>
<body>
    <input type="button" onclick="btnClick()" value="MVC click" />
    <input type="button" onclick="btnInvalidInputClick()" value="MVC click(Invalid data)" />
    <input type="button" onclick="btnAPIClick()" value="API click" />
    <input type="button" onclick="btnEmptyGetClick()" value="EmptyGet" />
    <script src="https://cdn.bootcss.com/axios/0.19.2/axios.min.js"></script>
    <script type="text/javascript">
        function btnClick()
        {
            axios.post('@Url.Action("Test","Home")',
                { phoneNumber: "119110", age: 3, salary: 333.3, gender: true,dir:"west",name:"zack yang" })
            .then(function (response)
            {
                alert(response.data);
            })
            .catch(function (error)
            {
                alert('Send failed');
            });
        }

        function btnInvalidInputClick() {
            axios.post('@Url.Action("Test","Home")',
                { phoneNumber: "119110", age: 190, salary: 333.3, gender: true,dir:"west"})
            .then(function (response)
            {
                alert(response.data);
            })
            .catch(function (error)
            {
                alert('Send failed');
            });
        }

        function btnAPIClick()
        {
            axios.post('/api/API',
                { i1: 1, i2: 5, author: { name: 'yzk', age: 18, father: {name:'laoyang',age:28}} })
            .then(function (response)
            {
                alert(response.data);
            })
            .catch(function (error)
            {
                alert('Send failed');
            });
        }
        function btnEmptyGetClick()
        {
            var xhr = new XMLHttpRequest();
            xhr.open("GET", "/api/API");
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.send();
        }
    </script>
</body>
</html>